#
# set paths for header files and libraries
#

OP2		:= ../common
CUDA		:= $(CUDA_INSTALL_PATH)
INC		:= -I$(CUDA)/include -I$(OP2) -I.
LIB		:= -L$(CUDA)/lib64

#
# set flags for compilation and linking
#

CCFLAGS		:= -g -fPIC -DUNIX -Wall -Wextra
NVCCFLAGS	:= -g -G -arch=sm_20 -Xptxas=-v -use_fast_math
LIBS		:= $(LIB) -lcudart
OMP		:= -fopenmp -lgomp

#
# master to make all versions
#

all:		jac_seq jac_op jac_cuda

#
# core OP2 library written in C99 for interoperability with FORTRAN 9x
#

op_lib_core.o:	$(OP2)/op_lib_core.c $(OP2)/op_lib_core.h
		gcc -o op_lib_core.o -std=c99 -c $(OP2)/op_lib_core.c

#
# simple sequential version
#

jac_seq:	jac.cpp $(OP2)/op_seq.h op_lib_core.o Makefile
		g++ $(INC) -o jac_seq jac.cpp op_lib_core.o

#
# x86 version using kernel files generated by op2.m
#

jac_op:		jac_op.cpp      res.h          update.h          \
		jac_kernels.cpp res_kernel.cpp update_kernel.cpp \
                op_lib_core.o Makefile
		g++ $(INC) $(OMP) -o jac_op jac_op.cpp jac_kernels.cpp op_lib_core.o

#
# CUDA version using kernel files generated by op2.m
#

jac_cuda:	jac_op.cpp jac_kernels_cu.o \
		op_lib_core.o Makefile
		g++ $(INC) -fPIC -o jac_cuda jac_op.cpp jac_kernels_cu.o op_lib_core.o $(LIBS)

jac_kernels_cu.o:	       res.h         update.h          \
                jac_kernels.cu res_kernel.cu update_kernel.cu  \
                $(OP2)/op_lib.cu $(OP2)/op_lib.h $(OP2)/op_lib_core.h Makefile
		nvcc $(INC) $(NVCCFLAGS) -c -o jac_kernels_cu.o jac_kernels.cu

#
# cleanup
#

clean:
		rm -f jac_seq jac_op jac_cuda *.o
